<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/codefire_settings"
        android:key="pref_category_button_settings"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:title="@string/codefire_misc" />

    <CheckBoxPreference android:key="pref_disable_bootanimation"
        android:title="@string/pref_disable_bootanimation_title"
        android:summary="@string/pref_disable_bootanimation_summary" />

    <EditTextPreference android:key="pref_kill_app_longpress_back_timeout"
        android:title="@string/pref_kill_app_longpress_back_timeout_title"
        android:dialogTitle="@string/pref_kill_app_longpress_back_timeout_dialogtitle"
        android:summary="@string/pref_kill_app_longpress_back_timeout_summary"
        android:singleLine="true"
        android:inputType="number"
        android:defaultValue="1000" />

    <ListPreference android:key="screenshot_scaling"
        android:title="@string/screenshot_scaling_title"
        android:summary="@string/screenshot_scaling_summary"
        android:entries="@array/screenshot_scaling_entries"
        android:entryValues="@array/screenshot_scaling_values"
        android:dialogTitle="@string/screenshot_scaling_dialog_title" />

   <Preference android:key="scroll_setup"
        android:title="@string/scroll_title"
        android:summary="@string/scroll_summary" />

    <CheckBoxPreference android:key="pref_trackball_unlock_toggle"
        android:title="@string/pref_trackball_unlock_toggle_title"
        android:summary="@string/pref_trackball_unlock_toggle_summary" />

    <CheckBoxPreference android:key="pref_trackball_wake_toggle"
        android:title="@string/pref_trackball_wake_toggle_title"
        android:summary="@string/pref_trackball_wake_toggle_summary" />

    <CheckBoxPreference android:key="system_volume_keys_rotate"
        android:title="@string/system_volume_keys_rotate"
        android:summary="@string/system_volume_keys_rotate_summary" />

    <PreferenceCategory
        android:title="@string/interface_recents" />

    <CheckBoxPreference android:key="recent_kill_all"
        android:title="@string/recent_kill_all"
        android:summary="@string/recent_kill_all_summary" />

    <CheckBoxPreference android:key="interface_recents_mem_display"
        android:title="@string/interface_recents_mem_display_title"
        android:summary="@string/interface_recents_mem_display_description" />

</PreferenceScreen>
